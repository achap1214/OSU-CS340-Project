</head>
<body>
    <div id="container">
        <div id="home">
            <a id="home" href="/" class="row" >
                <img id="chaplogo" src="chaplogo.png" alt="chap logo" class="col-sm-4">
                <h1 class="col">Chap Corporation</h1>
            </a>
        </div>
        <nav class="navbar navbar-expand-sm row">
              <ul class="navbar-nav">
                <li class="nav-item col">
                  <a class="nav-link" href="/traders">Traders</a>
                </li>
                <li class="nav-item col">
                  <a class="nav-link" href="/brokers">Brokers</a>
                </li>
                <li class="nav-item col">
                  <a class="nav-link" href="/managers">Managers</a>
                </li>
                <li class="nav-item col">
                    <a class="nav-link" href="/securities">Securities</a>
                 </li>
                <li class="nav-item col">
                    <a class="nav-link" href="/fills">Fills</a>
                </li>
                <li class="nav-item col">
                    <a class="nav-link" href="/trades">Trades</a>
                </li>
              </ul>
          </nav>

        <div class="container mt-3">
            <div><a><h2>Securities</h2></a></div>
            <table id="securitiesTable"class=" table table-bordered">
                <thead>
                        <tr>
                            {{!-- <th>Security ID</th>
                            <th>Security Symbol</th>
                            <th>Company Name</th> --}}
                            {{#each data.[0]}}
                            <th>
                                {{@key}}
                            </th>
                            {{/each}}
                        </tr>
                </thead>
                <tbody>
                    <tr>
                        <th><input type="text" id="securityIDInput" onkeyup="securityIDSearch()" placeholder="Search for security ID..." title="Type in a security ID"></th>
                        <th><input type="text" id="securitySymbolInput" onkeyup="securitySymbolSearch()" placeholder="Search for security symbol..." title="Type in a security symbol"></th>
                        <th><input type="text" id="companyNameInput" onkeyup="companyNameSearch()" placeholder="Search for company name..." title="Type in a company name"></th>
                    </tr>
                    {{#each data}}
                    <tr>
                        <td>{{this.SecurityID}}</td>
                        <td>{{this.SecuritySymbol}}</td>
                        <td>{{this.CompanyName}}</td>
                        <td>
                            <button class="btn btn-warning">Edit</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="container mt-3" id="form">
            <h3>Add Securities</h3>
            <form id="add-security-form" method="GET" action="/insert-security">
            <div class="form-group">
                <label for="SecurityID">Security ID</label>
                <input name="SecurityID" type="text" class="form-control" id="SecurityID" placeholder="Enter Security ID">
            </div>
            <div class="form-group">
                <label for="SecuritySymbol">Security Symbol</label>
                <input name="SecuritySymbol" type="text" class="form-control" id="SecuritySymbol" placeholder="Enter Security Symbol">
            </div>
            <div class="form-group">
                <label for="CompanyName">Company Name</label>
                <input name="CompanyName" type="text" class="form-control" id="CompanyName" placeholder="Enter Company Name">
            </div>
            <button type="submit" class="btn btn-primary">Add Security</button>
            </form>
        </div>
        <div class="container mt-3" id="form">
            <h3>Delete Security</h3>
            <form id="delete-security-form" method="DELETE" action="/delete-security">
                <div class="form-group">
                <label for="SecurityID">Trader ID</label>
                <input name="SecurityID" type="text" class="form-control" id="SecurityID" placeholder="Enter Security ID" required>
                </div>
                <button type="submit" class="btn btn-primary">Delete Security</button>
            </form>
        </div>
    </div>

    <script type = "text/javascript" src="SearchFunctions.js"></script>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
