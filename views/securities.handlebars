<!DOCTYPE html>
<html lang=eng>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Securities</title>
    <link rel="stylesheet" href="style.css">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div id="container">
        <div id="home">
            <a id="home" href="index.html" class="row" >
                <img id="chaplogo" src="chaplogo.png" alt="chap logo" class="col-sm-4">
                <h1 class="col">Chap Corporation</h1>
            </a>
        </div>
        <nav class="navbar navbar-expand-sm row">
              <ul class="navbar-nav">
                <li class="nav-item col">
                  <a class="nav-link" href="/traders">Traders</a>
                </li>
                <li class="nav-item col">
                  <a class="nav-link" href="/brokers">Brokers</a>
                </li>
                <li class="nav-item col">
                  <a class="nav-link" href="/managers">Managers</a>
                </li>
                <li class="nav-item col">
                    <a class="nav-link" href="/securities">Securities</a>
                 </li>
                <li class="nav-item col">
                    <a class="nav-link" href="/fills">Fills</a>
                </li>
                <li class="nav-item col">
                    <a class="nav-link" href="/trades">Trades</a>
                </li>
              </ul>
          </nav>

        <div class="container mt-3">
            <div><a><h2>Securities</h2></a></div>
            <table id="securitiesTable"class=" table table-bordered">
                <thead>
                        <tr>
                            <th>Security ID</th>
                            <th>Security Symbol</th>
                            <th>Company Name</th>
                        </tr>
                </thead>
                <tbody>
                    <tr>
                        <th><input type="text" id="securityIDInput" onkeyup="securityIDSearch()" placeholder="Search for security ID..." title="Type in a security ID"></th>
                        <th><input type="text" id="securitySymbolInput" onkeyup="securitySymbolSearch()" placeholder="Search for security symbol..." title="Type in a security symbol"></th>
                        <th><input type="text" id="companyNameInput" onkeyup="companyNameSearch()" placeholder="Search for company name..." title="Type in a company name"></th>
                    </tr>
                    {{#each Security}}
                    <tr>
                        <td>{{SecurityID}}</td>
                        <td>{{SecuritySymbol}}</td>
                        <td>{{CompanyName}}</td>
                        <td>
                            <button class="btn btn-warning">Edit</button>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
    </div>
    <div class="container mt-3" id="form">
        <h3>Add Securities</h3>
        <form >
          <div class="mb-3 mt-3">
            <label for="SecurityID">Security ID</label>
            <input type="securityID" class="form-control" id="securityID" placeholder="Enter Security ID">
          </div>
          <div class="mb-3">
            <label for="pwd">Security Symbol</label>
            <input type="securitySymbol" class="form-control" id="securitySymbol" placeholder="Enter Security Symbol">
          </div>
          <div class="mb-3">
            <label for="pwd">Company Name</label>
            <input type="companyName" class="form-control" id="companyName" placeholder="Enter Company Name">
          </div>
          <input type="button" class="add-row" value="Add Row">
        </form>
    </div>

    <script type = "text/javascript" src="SearchFunctions.js"></script>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function(){
            $(".add-row").click(function(){
                var securityID = $("#securityID").val();
                var securitySymbol = $("#securitySymbol").val();
                var companyName = $("#companyName").val();
                var markup = "<tr><td>" + securityID + "</td><td>" + securitySymbol + "</td><td>" + companyName + "</td></tr>";
                $("table tbody").append(markup);
            });
            
            // Find and remove selected table rows
            $(".delete-row").click(function(){
                $("table tbody").find('input[name="record"]').each(function(){
                    if($(this).is(":checked")){
                        $(this).parents("tr").remove();
                    }
                });
            });
        });    
    </script>
</body>

</html>